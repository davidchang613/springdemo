pipeline {
    agent none
    
    stages{
        stage('build spring project') {
            agent { 
                docker {
                    image 'maven.3.6.0'
                }
            }
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Docker Build') {
            agent any
            steps {
                sh "docker version"
                sh "docker build . -f Dockerfile-build -t davidchang613/springdemo:${VERSION}"
            }
        }
        
    }
}
